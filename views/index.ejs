<!Doctype html>
<html>

<head>
    <title>StreamOn</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>

<body>

    <div class="container">
        <header>
            <div class="row">
                <div class="col-sm-3">
                    <a href="/">
                        <img src="/imgs/LogotipoStreamOn.png" width="150">
                    </a>
                </div>
                <div class="col-sm-6">

                    <h1 class="mt-5"><i>Número 1 em streaming! </i></h1>

                </div>
                <div class="col-sm-3 mt-3 dd-flex justify-content-end">
                    <span id="bemVindo"></span>
                    <a id="entrar" href="/login" class="btn btn-danger">Entrar</a>
                    <a href="/" style="cursor:pointer;text-decoration:underline" class="btn btn-danger ml-2" id="sair">Sair</a>
                </div>
            </div>
        </header>

        <nav class="d-flex justify-content-around mb-4 mt-2">
            <a href="/" class="btn btn-dark">Início</a>
            <a href="/produtos" class="btn btn-dark">Produtos</a>
            <a href="/contato" class="btn btn-dark">Contato</a>
            <a href="/cadastro" class="btn btn-dark">Cadastre-se</a>
            <a href="/carrinho" class="btn btn-dark">Carrinho</a>
            <% 
                arr=[1,5,6,7,8,9,10,4,11,12]
                n= parseInt(Math.random()* arr.length) %>
                <a class="btn btn-dark" href="/single?id=<%=arr[n]%>">Surpreenda-me</a>
        </nav>

        <section>
            <article>
                <div class="row">
                    <!--inicio da iteração-->
                    <% filmes.forEach((item)=>{ %>
                    <div class="col-md-16 col-sm-16 col-lg-3 ml-3 mt-3">
                        <div>
                            <a href="/single?id=<%=item.filmes_id%>">
                            <img class="w-100 imagens" src="imgs/<%=item.imagem%>" alt="Card image cap">
                            </a>
                            <div>
                                <h4 ><%=item.titulo%></h4>
                                <p ><%=item.sinopse.substring(0,100)+"..."%></p>
                                <h2>R$ <%=item.valor%></h2>
                              <button class="btn btn-dark bt-carrinho">Adicionar ao carrinho</button>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                   </div>
                
            </article>
        </section>
        <footer class="mt-5">
            <p>&copy;2022 - Todos os direitos reservados</p>
        </footer>
    </div>

</body>
<script src="js/index.js"></script>
<script src="js/geral.js"></script>

</html>