<html>

<head>
    <title>StreamOn</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="css/style.css">
</head>

<body>

    <div class="container">
        <header>
            <div class="row">
                <div class="col-sm-3">
                    <a href="/adm/">
                        <img src="/imgs/LogotipoStreamOn.png" width="150">
                    </a>
                </div>
                <div class="col-sm-7 d-flex justify-content-center">

                    <img class="mt-2" width="210" src="/imgs/Streaming.png">

                </div>
                    <table class="table text-white" id="listaCarrinho">
                        <tr>
                            <th>Titulo</th>
                            <th>GÃªnero</th>
                            <th>Ano</th>
                            <th>Sinopse</th>
                            <th>Imagem</th>
                            <th>Promo</th>
                            <th>Valor</th>
                        </tr>
                        <% filmes.forEach((item)=>{ %>
                        <tr>
                            
                                
                                 
                            <td style="vertical-align:unset;">
                                <%= item.titulo %>
                                 </td>
                                <td style="vertical-align:unset;">
                                    <%= item.genero %>
                                </td>
                                    <td style="vertical-align:unset;">
                                        <%= item.Ano %>
                                    </td>
                            <td style="vertical-align:unset;">
                                <p ><%=item.sinopse.substring(0,50)+"..."%></p>
                            </td>
                            <td style="vertical-align:unset;">
                                <img class="w-100 imagens" src="/imgs/<%=item.imagem%>">
                                </td>
                                <td style="vertical-align:unset;">
                                    <%= item.promo %>
                            
                               </td>
                               <td style="vertical-align:unset;">
                                <%= item.valor %>
                                
                           </td>
                                
                                 
                           
                        
                           <% }) %>
                    </table>
                </div>
            </header>

                        <footer class="mt-5">
                            <p>&copy;2022 - Todos os direitos reservados</p>
                        </footer>
                    </body>
                    </html>
        